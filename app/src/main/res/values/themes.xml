<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
       name="ColoredButton" parent="@style/Widget.AppCompat.Button.Colored">
           <!-- <item name="colorButtonNormal">@color/cardview_light_background</item>
            <item name="colorControlHighlight">@color/black</item>
             <item name="colorAccent">#310E6D</item>-->
    </style>

    <style name="MyStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">#310E6D</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:fontFamily">bold</item>
        <item name="android:textStyle">bold</item>

    </style>

    <dimen name="textSize">40sp</dimen>
    <dimen name="margin">5dp</dimen>
</resources>